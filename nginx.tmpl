user  nginx;
worker_processes  1;

error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;

events {
  worker_connections 1024;
  multi_accept on;
}

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;

  log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

  access_log  /var/log/nginx/access.log  main;

  sendfile        on;
  #tcp_nopush     on;

  keepalive_timeout  65;

  gzip  on;

  {{if exists "/services/nginx/http/before"}}{{range $conf := split (getv "/services/nginx/http/before") ";"}}
  {{$conf}};
  {{end}}{{end}}

  {{if exists "/services/nginx/http/map"}}{{range gets "/services/nginx/http/map/*"}}
  map {{.Key}} {
    {{.Value}}
  }
  {{end}}{{end}}

  {{if exists "/services/nginx/http/upstream"}}{{range gets "/services/nginx/http/upstream/*"}}
  upstream  {{.Key}} {
    {{range $url := split .Value ","}}
    server {{$url}} fail_timeout=0;
    {{end}}
  }
  {{end}}{{end}}

  {{if exists "/services/nginx/http/server"}}{{range gets "/services/nginx/http/server/*"}}
  server {
    {{.Value}}
  }
  {{end}}{{end}}
}
